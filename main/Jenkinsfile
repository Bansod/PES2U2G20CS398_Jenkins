pipeline {
    agent any
    stages {
        stage('Build Stage') {
            steps {
                sh 'g++ -o out hello.cpp'
                echo "Build Successful"
            }
        }
        stage('Test Stage') {
            steps {
                sh './out'
            }
        }
    }
    post {
        always {
            echo 'Pipeline completed'
        }
        failure {
            echo 'Pipeline failed'
        }
    }
}
